{
    "manifest_version": 2,
    "name": "chr-fx",
    "description": "Tooltips for major currency pairs",
    "version": "1.0",
    "background": {
        "scripts": [
            "/js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js"
            ]
        }
    ],
    "options_page": "options.html"
}
